{% extends 'base.html.twig' %}

{% block title %}Editar Paciente{% endblock %}

{% block body %}
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <h5 class="card-header">Registrar Paciente</h5>
      <div class="card-body">
        {{ form_start(form) }}
          {# the argument of csrf_token() is an arbitrary string used to generate the token #}
          <input type="hidden" name="token" value="{{ csrf_token('create-item') }}"/>
          <div class="row" style="text-align: center">
            <div class="col-md-4">
              {{ form_label(form.nombres) }}
              {{ form_widget(form.nombres) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.email) }}
              {{ form_widget(form.email) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.direccion) }}
              {{ form_widget(form.direccion) }}
            </div>
          </div>
          <div class="row" style="text-align: center;">
            <div class="col-md-4">
              {{ form_label(form.telefono) }}
              {{ form_widget(form.telefono) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.fechaNacimiento) }}
              {{ form_widget(form.fechaNacimiento) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.apellidoCasada) }}
              {{ form_widget(form.apellidoCasada) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.estadoCivil) }}
              {{ form_widget(form.estadoCivil) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.genero) }}
              {{ form_widget(form.genero) }}
            </div>
            <div class="col-md-4">
              <label>Nueva Contraseña</label>
              <input type="password" name="nueva_password" id="nueva_password" class="form-control">
            </div>
            <div class="col-md-4">
              <label>Confirmar nueva contraseña</label>
              <input type="password" name="nueva_confirmPassword" id="nueva_confirmPassword" class="form-control">
            </div>
          </div>
          <div class="container" style="margin-top: 1%">
            <div class="row" style="text-align: center;">
              <div class="col-md-3"></div>
              <div class="col-md-3">
                {{ form_label(form.guardar) }}
                {{ form_widget(form.guardar) }}
              </div>
              <div class="col-md-3" style="text-align: left;">
                <button type="reset" class="btn btn-outline-info">Limpiar Pantalla</button>
              </div>
              <div class="col-md-3"></div>
            </div>
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>	
	<a class="btn btn-secondary" href="{{ path('expediente_index') }}">Atras</a>
{% endblock %}
