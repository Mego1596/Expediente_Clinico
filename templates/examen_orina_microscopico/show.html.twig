{% extends 'base.html.twig' %}

{% block title %}Detalle del Examen de Orina Microscopico{% endblock %}

{% block body %}

<div class="card">
        <div class="card-header">
                            <div class="row">
                                <div class="col-md-12 col-sm-12" style="color: black">
                                    <h4>Detalle del Examen de Orina Microscopico</h4> 
                                </div>
                            </div>
        </div>
         <div class="card-body">
            <div class="table table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Uretral:</th>
                                <td>{{ examen_orina_microscopico.uretral }}</td>
                            </tr>
                            <tr>
                                <th>Urotelio:</th>
                                <td>{{ examen_orina_microscopico.urotelio }}</td>
                            </tr>
                            <tr>
                                <th>Renal:</th>
                                <td>{{ examen_orina_microscopico.renal }}</td>
                            </tr>
                            <tr>
                                <th>Leucocitos:</th>
                                <td>{{ examen_orina_microscopico.leucocitos }}</td>
                            </tr>
                            <tr>
                                <th>Piocitos:</th>
                                <td>{{ examen_orina_microscopico.piocitos }}</td>
                            </tr>
                            <tr>
                                <th>Eritrocitos:</th>
                                <td>{{ examen_orina_microscopico.eritrocitos }}</td>
                            </tr>
                            <tr>
                                <th>Bacteria:</th>
                                <td>{{ examen_orina_microscopico.bacteria }}</td>
                            </tr>
                            <tr>
                                <th>Parasitos:</th>
                                <td>{{ examen_orina_microscopico.parasitos }}</td>
                            </tr>
                            <tr>
                                <th>Funguria:</th>
                                <td>{{ examen_orina_microscopico.funguria }}</td>
                            </tr>
                            <tr>
                                <th>Filamento De Mucina:</th>
                                <td>{{ examen_orina_microscopico.filamentoDeMucina }}</td>
                            </tr>
                            <tr>
                                <th>Proteina Uromocoide:</th>
                                <td>{{ examen_orina_microscopico.proteinaUromocoide }}</td>
                            </tr>
                            <tr>
                                <th>Cilindros:</th>
                                <td>{{ examen_orina_microscopico.cilindros }}</td>
                            </tr>
                            <tr>
                                <th>Fecha de creacion (Año-Mes-Dia):</th>
                                <td>{{ examen_orina_microscopico.creadoEn ? examen_orina_microscopico.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Ultima Actualizacion (Año-Mes-Dia):</th>
                                <td>{{ examen_orina_microscopico.actualizadoEn ? examen_orina_microscopico.actualizadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
            </div>
                    {% if (is_granted('ROLE_PERMISSION_INDEX_EXAMENES')) %}
                        <a class="btn btn-secondary" href="{{ path('examen_orina_microscopico_index',{'examen_solicitado': examen_solicitado.getId()}) }}">Atras</a>
                    {% endif %}
                    {% if (is_granted('ROLE_PERMISSION_EDIT_EXAMENES')) %}
                        <a class="btn btn-primary" href="{{ path('examen_orina_microscopico_edit', {'id': examen_orina_microscopico.id,'examen_solicitado': examen_solicitado.getId()}) }}">Editar</a> 
                    {% endif %}
        </div>

</div>

    
{% endblock %}
