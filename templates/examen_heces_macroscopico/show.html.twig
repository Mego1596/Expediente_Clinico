{% extends 'base.html.twig' %}

{% block title %}Detalles del Examen{% endblock %}

{% block body %}

<div class="card">
        <div class="card-header">
                            <div class="row">
                                <div class="col-md-12 col-sm-12" style="color: black">
                                    <h4>Detalles del Examen de Heces Macroscopico</h4> 
                                </div>
                            </div>
        </div>
         <div class="card-body">
            <div class="table table-responsive">
                    <table class="table">
                        <tbody>

                            <tr>
                                <th>Aspecto</th>
                                <td>{{ examen_heces_macroscopico.aspecto }}</td>
                            </tr>
                            <tr>
                                <th>Consistencia</th>
                                <td>{{ examen_heces_macroscopico.consistencia }}</td>
                            </tr>
                            <tr>
                                <th>Color</th>
                                <td>{{ examen_heces_macroscopico.color }}</td>
                            </tr>
                            <tr>
                                <th>Olor</th>
                                <td>{{ examen_heces_macroscopico.olor }}</td>
                            </tr>
                            <tr>
                                <th>Presencia_de_sangre</th>
                                <td>{{ examen_heces_macroscopico.presenciaDeSangre }}</td>
                            </tr>
                            <tr>
                                <th>Restos_alimenticios</th>
                                <td>{{ examen_heces_macroscopico.restosAlimenticios }}</td>
                            </tr>
                            <tr>
                                <th>Presencia_moco</th>
                                <td>{{ examen_heces_macroscopico.presenciaMoco }}</td>
                            </tr>
                            <tr>
                                <th>Fecha de creacion (Año-Mes-Dia):</th>
                                <td>{{ examen_heces_macroscopico.creadoEn ? examen_heces_macroscopico.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Ultima Actualizacion (Año-Mes-Dia):</th>
                                <td>{{ examen_heces_macroscopico.actualizadoEn ? examen_heces_macroscopico.actualizadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
            </div>
                    {% if (is_granted('ROLE_PERMISSION_INDEX_EXAMENES')) %}
                        <a class="btn btn-secondary" href="{{ path('examen_heces_macroscopico_index',{'examen_solicitado': examen_solicitado.getId()}) }}">Atras</a>
                    {% endif %}
                    {% if (is_granted('ROLE_PERMISSION_EDIT_EXAMENES')) %}
                        <a class="btn btn-primary" href="{{ path('examen_heces_macroscopico_edit', {'id': examen_heces_macroscopico.id,'examen_solicitado': examen_solicitado.getId()}) }}">Editar</a> 
                    {% endif %}
        </div>

</div>



{% endblock %}
