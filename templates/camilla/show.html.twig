{% extends 'base.html.twig' %}

{% block title %}Camilla{% endblock %}

{% block body %}



<div class="card">
        <div class="card-header">
                            <div class="row">
                                <div class="col-md-12 col-sm-12" style="color: black">
                                    <h4>Detalles de la camilla </h4> 
                                </div>
                            </div>
        </div>
         <div class="card-body">
            <div class="table table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Número de Camilla:</th>
                                <td>{{ camilla.numeroCamilla }}</td>
                            </tr>
                            <tr>
                                <th>Habitacion:</th>
                                <td>{{ habitacion.numero_habitacion }}</td>
                            </tr>
                            <tr>
                                <th>Sala:</th>
                                <td>{{ habitacion.nombre_sala }}</td>
                            </tr>
                            <tr>
                                <th>Clinica:</th>
                                <td>{{ habitacion.nombre_clinica }}</td>
                            </tr>
                            <tr>
                                <th>Fecha de creacion (Año-Mes-Dia): </th>
                                <td>{{ camilla.creadoEn ? camilla.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Ultima Actualizacion (Año-Mes-Dia): </th>
                                <td>{{ camilla.actualizadoEn ? camilla.actualizadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
            </div>
                    {% if(is_granted('ROLE_PERMISSION_INDEX_CAMILLA')) %}
                    <a class="btn btn-secondary" href="{{ path('camilla_index', {'habitacion': habitacion.habitacion_id} ) }}">Atrás</a>
                    {% endif %}
                    {% if(is_granted('ROLE_PERMISSION_EDIT_CAMILLA')) %}
                    <a class="btn btn-success" href="{{ path('camilla_edit', {'id':camilla.id, 'habitacion': habitacion.habitacion_id}) }}">Intercambiar</a>
                    {% endif %}
                    
        </div>

</div>


    
{% endblock %}
