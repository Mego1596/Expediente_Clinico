{% extends 'base.html.twig' %}

{% block title %}Nuevo Usuario{% endblock %}

{% block body %}
{% if ('There is already an account with this email' in form_errors(form.email)) %}
<div class="alert alert-danger">
    Usuario con email ya existe
</div>
{% endif %}
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <h5 class="card-header">Registrar Usuario</h5>
      <div class="card-body">
        {{ form_start(form) }}
          {# the argument of csrf_token() is an arbitrary string used to generate the token #}
          <input type="hidden" name="token" value="{{ csrf_token('create-item') }}"/>
          <div class="row" style="text-align: center">
            <div class="col-md-4">
              {{ form_label(form.nombres) }}
              {{ form_widget(form.nombres) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.apellidos) }}
              {{ form_widget(form.apellidos) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.email) }}
              {{ form_widget(form.email) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.clinica) }}
              {{ form_widget(form.clinica) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.rol) }}
              {{ form_widget(form.rol) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.password,"Contrase√±a") }}
              {{ form_widget(form.password) }}
            </div>
          </div>
            <div id="seccion_especialidad">
              <div class="row">
                <div class="col-md-12">
                  {{ form_label(form.usuario_especialidades ) }}
                  {{ form_widget(form.usuario_especialidades) }}
                </div>
              </div>
            </div>
            <div id="seccion_emergencia">
              <div class="row">
                <div class="col-md-12">
                  {{ form_label(form.emergencia) }}
                  {{ form_widget(form.emergencia) }}
                </div>
              </div>
            </div>
            <div id="seccion_planta">
              <div class="row">
                <div class="col-md-12">
                  {{ form_label(form.planta) }}
                  {{ form_widget(form.planta) }}
                </div>
              </div>
            </div>
          <div class="container" style="margin-top: 1%">
            <div class="row" style="text-align: center;">
              <div class="col-md-3"></div>
              <div class="col-md-3">
                {{ form_label(form.guardar) }}
                {{ form_widget(form.guardar) }}
              </div>
              <div class="col-md-3" style="text-align: left;">
                <button type="reset" class="btn btn-outline-info">Limpiar Pantalla</button>
              </div>
              <div class="col-md-3"></div>
            </div>
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
  <a class="btn btn-secondary btn-inline" href="{{ path('user_index') }}">Atras</a>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{asset('js/crear_usuario.js')}}"></script>
{% endblock %}