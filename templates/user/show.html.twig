{% extends 'base.html.twig' %}

{% block title %}Detalles del Usuario{% endblock %}

{% block body %}
<h1>Detalles del Usuario </h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>
    {% if(is_granted('ROLE_PERMISSION_INDEX_USER')) %}
    <a class="btn btn-secondary" href="{{ path('user_index') }}">Atr√°s</a>
    {% endif %}
    {% if(is_granted('ROLE_PERMISSION_EDIT_USER')) %}
    <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">Editar</a>
    {% endif %}
{% endblock %}
