<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal{{ citum.id}}">
    Eliminar
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal{{ citum.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
    	<div class="modal-content">
        	<div class="modal-header">
            	<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                	<span aria-hidden="true">&times;</span>
               	</button>
            </div>
            <div class="modal-body">
            	Esta seguro que desea eliminar la cita?
            </div>
            <div class="modal-footer">
            	<button type="button" class="btn btn-outline-secondary" data-dismiss="modal">No</button>
                <form method="post" action="{{ path('cita_delete', {'expediente': expediente.getId(),'id': citum.id}) }}">
                	<input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ citum.id) }}">
                    <button type="submit" class="btn btn-outline-danger">Si</button>
                </form>
            </div>
        </div>
    </div>
</div>

