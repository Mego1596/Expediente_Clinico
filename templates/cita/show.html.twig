{% extends 'base.html.twig' %}

{% block title %}Detalles de la Cita{% endblock %}

{% block body %}
    <h1>Detalles de la Cita</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ citum.id }}</td>
            </tr>
            <tr>
                <th>Fecha_inicio</th>
                <td>{{ citum.fechaReservacion ? citum.fechaReservacion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha_fin</th>
                <td>{{ citum.fechaFin ? citum.fechaFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ citum.consultaPor }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('cita_index',{'expediente': expediente.getId()}) }}">Atras</a>

    <a href="{{ path('cita_edit', {'expediente': expediente.getId(),'id': citum.id}) }}">edit</a>

    {{ include('cita/_delete_form.html.twig') }}
{% endblock %}
