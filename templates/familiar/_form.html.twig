<div class="row">
  <div class="col-md-12">
    <div class="card">
      <h5 class="card-header">
        {% if editar == true %}
          Modificar Familiar
        {% else %}
          Registrar Familiar
        {% endif %}
      </h5>
      <div class="card-body">
        {{ form_start(form) }}
          {# the argument of csrf_token() is an arbitrary string used to generate the token #}
          <input type="hidden" name="token" value="{{ csrf_token('create-item') }}"/>
          <div class="row" style="text-align: center">
            <div class="col-md-4">
              {{ form_label(form.nombres) }}
              {{ form_widget(form.nombres) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.apellidos) }}
              {{ form_widget(form.apellidos) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.fechaNacimiento) }}
              {{ form_widget(form.fechaNacimiento) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.telefono) }}
              {{ form_widget(form.telefono) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.descripcion,"Parentesco") }}
              {{ form_widget(form.descripcion) }}
            </div>
            {% if (editar != true) %}
              <div class="col-md-4">
                <label>Responsable:</label>
                	<br/>
                	<input type="radio" id="radio1" name="responsable" value="0" style="margin-left: 4%">
                	<label for="radio1">No</label>
                	<br/>
                	<input type="radio" id="radio2" name="responsable" value="1">
                	<label for="radio2">Si</label>
              </div>
            {% else %}
              {% if (familiaresExpediente.responsable == true) %}
              <div class="col-md-4">
                <label>Responsable:</label>
                  <br/>
                  <input type="radio" id="radio1" name="responsable" value="0" style="margin-left: 4%">
                  <label for="radio1">No</label>
                  <br/>
                  <input type="radio" id="radio2" name="responsable" value="1" checked="checked">
                  <label for="radio2">Si</label>
              </div>
              {% else %}
              <div class="col-md-4">
                <label>Responsable:</label>
                  <br/>
                  <input type="radio" id="radio1" name="responsable" value="0" style="margin-left: 4%" checked="checked">
                  <label for="radio1">No</label>
                  <br/>
                  <input type="radio" id="radio2" name="responsable" value="1">
                  <label for="radio2">Si</label>
              </div>
              {% endif %}
            {% endif %}
          </div>
          <div class="container" style="margin-top: 1%">
            <div class="row" style="text-align: center;">
              <div class="col-md-3"></div>
              <div class="col-md-3">
                {{ form_label(form.guardar) }}
                {{ form_widget(form.guardar) }}
              </div>
              {% if editar == false %}
                <div class="col-md-3" style="text-align: left;">
                  <button id="limpiarDatos" type="reset" class="btn btn-outline-info">Limpiar Pantalla</button>
                </div>
              {% endif %}
              <div class="col-md-3"></div>
            </div>
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>

