{% extends 'base.html.twig' %}

{% block title %}Detalles del Examen{% endblock %}

{% block body %}

<div class="card">
        <div class="card-header">
                            <div class="row">
                                <div class="col-md-12 col-sm-12" style="color: black">
                                    <h4>Detalles del Examen Hematologico </h4> 
                                </div>
                            </div>
        </div>
         <div class="card-body">
            <div class="table table-responsive">
                <table class="table">
                        <tbody>
                            
                            <tr>
                                <th>Hematies:</th>
                                <td>{{ examen_hematologico.tipoSerie }}</td>
                            </tr>
                            <tr>
                                <th>Leucocito:</th>
                                <td>{{ examen_hematologico.unidad }}</td>
                            </tr>
                            <tr>
                                <th>Flora Bacteriana:</th>
                                <td>{{ examen_hematologico.valorReferencia }}</td>
                            </tr>
                            <tr>
                                <th>Fecha de creacion (Año-Mes-Dia):</th>
                                <td>{{ examen_hematologico.creadoEn ? examen_hematologico.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Ultima Actualizacion (Año-Mes-Dia):</th>
                                <td>{{ examen_hematologico.actualizadoEn ? examen_hematologico.actualizadoEn|date('Y-m-d H:i:s') : '' }}
</td>
                            </tr>
                        </tbody>
                </table>

            </div>
                    {% if (is_granted('ROLE_PERMISSION_INDEX_EXAMENES')) %}
                        <a class="btn btn-secondary" href="{{ path('examen_hematologico_index',{'examen_solicitado': examen_solicitado.getId()}) }}">Atras</a>
                    {% endif %}
                    {% if (is_granted('ROLE_PERMISSION_EDIT_EXAMENES')) %}
                        <a class="btn btn-primary" href="{{ path('examen_hematologico_edit', {'id': examen_hematologico.id,'examen_solicitado': examen_solicitado.getId()}) }}">Editar</a> 
                    {% endif %}
        </div>

</div>

    
{% endblock %}