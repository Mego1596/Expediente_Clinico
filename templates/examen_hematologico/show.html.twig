{% extends 'base.html.twig' %}

{% block title %}Detalles del Examen{% endblock %}

{% block body %}
    <h1>Examen Hematologico</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ examen_hematologico.id }}</td>
            </tr>
            <tr>
                <th>Hematies</th>
                <td>{{ examen_hematologico.tipoSerie }}</td>
            </tr>
            <tr>
                <th>Leucocito</th>
                <td>{{ examen_hematologico.unidad }}</td>
            </tr>
            <tr>
                <th>FloraBacteriana</th>
                <td>{{ examen_hematologico.valorReferencia }}</td>
            </tr>
        </tbody>
    </table>

    {% if (is_granted('ROLE_PERMISSION_INDEX_EXAMENES')) %}
        <a class="btn btn-secondary" href="{{ path('examen_hematologico_index',{'examen_solicitado': examen_solicitado.getId()}) }}">Atras</a>
    {% endif %}
    {% if (is_granted('ROLE_PERMISSION_EDIT_EXAMENES')) %}
        <a class="btn btn-primary" href="{{ path('examen_hematologico_edit', {'id': examen_hematologico.id,'examen_solicitado': examen_solicitado.getId()}) }}">Editar</a> 
    {% endif %}
{% endblock %}