{% extends 'base.html.twig' %}

{% block title %}Examen Orina Cristaluria{% endblock %}

{% block body %}

<div class="card">
        <div class="card-header">
                            <div class="row">
                                <div class="col-md-12 col-sm-12" style="color: black">
                                    <h4>Detalles del Examen de Orina Cristaluria </h4> 
                                </div>
                            </div>
        </div>
         <div class="card-body">
            <div class="table table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Uratos Amorfos:</th>
                                    <td>{{ examen_orina_cristaluria.uratosAmorfos }}</td>
                                </tr>
                                <tr>
                                    <th>Acido Urico:</th>
                                    <td>{{ examen_orina_cristaluria.acidoUrico }}</td>
                                </tr>
                                <tr>
                                    <th>Oxalatos Calcicos:</th>
                                    <td>{{ examen_orina_cristaluria.oxalatosCalcicos }}</td>
                                </tr>
                                <tr>
                                    <th>Fosfatos Amorfos:</th>
                                    <td>{{ examen_orina_cristaluria.fosfatosAmorfos }}</td>
                                </tr>
                                <tr>
                                    <th>Fosfatos Calcicos:</th>
                                    <td>{{ examen_orina_cristaluria.fosfatosCalcicos }}</td>
                                </tr>
                                <tr>
                                    <th>Fosfatos Amonicos:</th>
                                    <td>{{ examen_orina_cristaluria.fosfatosAmonicos }}</td>
                                </tr>
                                <tr>
                                    <th>Riesgo Litogenico:</th>
                                    <td>{{ examen_orina_cristaluria.riesgoLitogenico }}</td>
                                </tr>
                                <tr>
                                    <th>Fecha de creacion (Año-Mes-Dia):</th>
                                    <td>{{ examen_orina_cristaluria.creadoEn ? examen_orina_cristaluria.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Ultima Actualizacion (Año-Mes-Dia):</th>
                                    <td>{{ examen_orina_cristaluria.actualizadoEn ? examen_orina_cristaluria.actualizadoEn|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
            </div>
                    {% if (is_granted('ROLE_PERMISSION_INDEX_EXAMENES')) %}
                        <a class="btn btn-secondary" href="{{ path('examen_orina_cristaluria_index',{'examen_solicitado': examen_solicitado.getId()}) }}">Atras</a>
                    {% endif %}
                    {% if (is_granted('ROLE_PERMISSION_EDIT_EXAMENES')) %}
                        <a class="btn btn-primary" href="{{ path('examen_orina_cristaluria_edit', {'id': examen_orina_cristaluria.id,'examen_solicitado': examen_solicitado.getId()}) }}">Editar</a> 
                    {% endif %}
        </div>

</div>


{% endblock %}
