{% extends 'base.html.twig' %}

{% block title %}Detalles de la Clinica{% endblock %}

{% block body %}
    <h1>Detalles de la Clinica</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>NombreClinica</th>
                <td>{{ clinica.nombreClinica }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ clinica.direccion }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ clinica.telefono }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ clinica.email }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('clinica_index') }}">Atras</a>
    <a class="btn btn-primary" href="{{ path('clinica_edit', {'id': clinica.id}) }}">Editar</a>

{% endblock %}
