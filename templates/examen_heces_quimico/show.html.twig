{% extends 'base.html.twig' %}

{% block title %}Examen de Heces Quimico{% endblock %}

{% block body %}

<div class="card">
        <div class="card-header">
                            <div class="row">
                                <div class="col-md-12 col-sm-12" style="color: black">
                                    <h4>Detalles del Examen de Heces Quimico </h4> 
                                </div>
                            </div>
        </div>
         <div class="card-body">
            <div class="table table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Ph</th>
                                <td>{{ examen_heces_quimico.ph }}</td>
                            </tr>
                            <tr>
                                <th>Azucares_reductores</th>
                                <td>{{ examen_heces_quimico.azucaresReductores }}</td>
                            </tr>
                            <tr>
                                <th>Sangre_oculta</th>
                                <td>{{ examen_heces_quimico.sangreOculta }}</td>
                            </tr>
                            <tr>
                                <th>Fecha de creacion (Año-Mes-Dia):</th>
                                <td>{{ examen_heces_quimico.creadoEn ? examen_heces_quimico.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Ultima Actualizacion (Año-Mes-Dia):</th>
                                <td>{{ examen_heces_quimico.actualizadoEn ? examen_heces_quimico.actualizadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
            </div>
                    {% if (is_granted('ROLE_PERMISSION_INDEX_EXAMENES')) %}
                        <a class="btn btn-secondary" href="{{ path('examen_heces_quimico_index',{'examen_solicitado': examen_solicitado.getId()}) }}">Atras</a>
                    {% endif %}
                    {% if (is_granted('ROLE_PERMISSION_EDIT_EXAMENES')) %}
                        <a class="btn btn-primary" href="{{ path('examen_heces_quimico_edit', {'id': examen_heces_quimico.id,'examen_solicitado': examen_solicitado.getId()}) }}">Editar</a> 
                    {% endif %}
        </div>

</div>
    
{% endblock %}
