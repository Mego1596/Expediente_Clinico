{% extends 'base.html.twig' %}

{% block title %}Detalles del Genero{% endblock %}

{% block body %}
    {{ include('genero/_formShow.html.twig') }}

    <div class="card-body">
            <div class="table table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Fecha de creacion (Año-Mes-Dia):</th>
                                <td>{{ genero.creadoEn ? genero.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>

                            <tr>
                                <th>Ultima Actualizacion (Año-Mes-Dia):a</th>
                                <td>{{ genero.actualizadoEn ? genero.actualizadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
    </div>
    {%if (is_granted('ROLE_PERMISSION_INDEX_GENERO')) %}
      <a class="btn btn-secondary" href="{{ path('genero_index') }}">Atras</a>
    {% endif %}
    {% if(is_granted('ROLE_PERMISSION_EDIT_GENERO')) %}
    <a class="btn btn-primary" href="{{ path('genero_edit', {'id': genero.id}) }}">Editar</a>
    {% endif %}
{% endblock %}
