{% extends 'base.html.twig' %}

{% block title %}Detalles de la Especialidad{% endblock %}

{% block body %}
    {{ include('especialidad/_formShow.html.twig') }}
    <div class="card-body">
            <div class="table table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Fecha de creacion (Año-Mes-Dia):</th>
                                <td>{{ especialidad.creadoEn ? especialidad.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>

                            <tr>
                                <th>Ultima Actualizacion (Año-Mes-Dia):a</th>
                                <td>{{ especialidad.actualizadoEn ? especialidad.actualizadoEn|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
    </div>
    {%if (is_granted('ROLE_PERMISSION_INDEX_ESPECIALIDAD')) %}
    	<a class="btn btn-secondary" href="{{ path('especialidad_index') }}">Atrás</a>
  	{% endif %}
    {% if(is_granted('ROLE_PERMISSION_EDIT_ESPECIALIDAD')) %}
    	<a class="btn btn-primary" href="{{ path('especialidad_edit', {'id': especialidad.id}) }}">Editar</a>
    {% endif %}
{% endblock %}
